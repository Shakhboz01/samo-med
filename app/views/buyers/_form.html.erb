<%= simple_form_for(buyer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: t('buyers.form.name') %>
    <%= f.input :phone_number, label: t('buyers.form.phone_number') %>
    <%= f.input :birthday, label: 'Tug\'ilgan sana', as: :date, html5: true %>
    <%= f.input :gender, label: 'Jinsi', collection: Buyer.genders.keys.map { |unit| [Buyer.human_attribute_name("unit.#{unit}"), unit] }, include_blank: false, class: 'form-control' %>
    <%= f.input :comment, label: t('buyers.form.comment') %>
    <%= f.input :is_room_member, label: 'Palatada yotadigan bemor?' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('buyers.form.save') %>
  </div>
<% end %>

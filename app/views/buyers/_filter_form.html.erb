  <%= search_form_for @q, url: url, html: { class: 'form form-horizontal filter-form' } do |f| %>
    <div class="card shadow-lg">
      <div class="row">
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :name_cont, t('buyers.filter.name_contains'), class: 'control-label' %>
          <%= f.text_field :name_cont, class: 'form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :comment_cont, t('buyers.filter.comment_contains'), class: 'control-label' %>
          <%= f.text_field :comment_cont, class: 'form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :phone_number_cont, t('buyers.filter.phone_number_contains'), class: 'control-label' %>
          <%= f.text_field :phone_number_cont, class: 'form-control', autocomplete: :off %>
        </div>
        <div class="form-group col-xs-12 col-sm-3">
          <%= f.label :is_room_member, 'Palatada yotayotgan bemor', class: 'control-label' %>
          <%= f.check_box :is_room_member, {}, 1, nil %>
        </div>

        <div class="form-group col-xs-12 col-sm-3">
          <%= f.submit t('buyers.filter.search'), class: 'btn btn-primary' %>
          <%= link_to t('buyers.filter.cancel'), request.path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  <% end %>


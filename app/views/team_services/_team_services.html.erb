<table class="table table-hover table-bordered table-striped">
  <thead class='table-dark'>
    <tr>
      <th>Итого цена</th>
      <th>Доля бригадеров в %</th>
      <th>Доля бригадеров</th>
      <th>Остаток</th>
      <th>Коммент</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% team_services.each do |team_service| %>
      <tr>
        <td><%= number_to_currency team_service.total_price %></td>
        <td><%= team_service.team_fee %>%</td>
        <td><%= number_to_currency team_service.team_portion %></td>
        <td><%= number_to_currency team_service.company_portion %></td>
        <td><%= team_service.comment %></td>
        <td>
          <%= clink_to 'Посмотреть', sale_from_service_path(team_service.sale_from_service), 'bi-search' %>
          <%= cdlink_to 'удалить', team_service %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
